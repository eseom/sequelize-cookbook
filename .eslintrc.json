{
  "parserOptions": {
    "ecmaVersion": 8
  },
  "extends": "airbnb/base",
  "rules": {
    "semi": [
      1,
      "never"
    ],
    "global-require": 0,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "no-plusplus": 1,
    "no-unused-vars": 1,
    "no-param-reassign": 0,
    "no-script-url": 0,
    "func-names": 0,
    "class-methods-use-this": 0
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "PRODUCTION": true
  }
}
